<div id="wrapper">
  <div class="button">
    <img src="http://stream1.gifsoup.com/view2/4807797/roulette-wheel-o.gif" id="moving" class="on" freezeframe>
    <p></p>
    <h2>Click the roulette wheel for enlightenment.</h2>
<!--     <button class="btn btn-large btn-primary">Click here to be enlightened.</button> -->
  </div>
  <div id="methods">
    <div class="method">
      <%= render 'roulette/include' %>
    </div>

    <div class="method">
      <%= render 'roulette/inject' %>
    </div>

    <div class="method">
      <%= render 'roulette/fetch' %>
    </div>

    <div class="method">
      <%= render 'roulette/invert' %>
    </div>
  </div>
</div>â€‹

<script>
$(document).ready(function() {

  $('#moving').click(function() {
    if ($(this).attr("class") == "on") {
      this.src = this.src.replace("http://stream1.gifsoup.com/view2/4807797/roulette-wheel-o.gif","http://i43.tinypic.com/1601ndh.png");
    } else {
      this.src = this.src.replace("http://i43.tinypic.com/1601ndh.png","http://stream1.gifsoup.com/view2/4807797/roulette-wheel-o.gif");
    }
    $(this).toggleClass("on");

  var methods = $('#methods .method');

    if (methods.is(":visible")) {
      methods.hide();
    }
    else {
      var rand = Math.floor(Math.random() * methods.length);
      methods.eq(rand).show();
    }
  });
})
</script>