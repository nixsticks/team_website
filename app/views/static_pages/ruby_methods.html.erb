<div id="wrapper">
  <div class="button">
    <img src="http://i41.tinypic.com/fm6mj8.gif" id="moving" class="on" freezeframe>
    <p></p>
    <h2>Click the roulette wheel for enlightenment.</h2>
<!--     <button class="btn btn-large btn-primary">Click here to be enlightened.</button> -->
  </div>
  <div id="methods">
    <div class="method">
      <%= render 'roulette/include' %>
    </div>

    <div class="method">
      <%= render 'roulette/inject' %>
    </div>

    <div class="method">
      <%= render 'roulette/fetch' %>
    </div>

    <div class="method">
      <%= render 'roulette/invert' %>
    </div>
  </div>
</div>â€‹

<script>
$(document).ready(function() {

  $('#moving').click(function() {
    var images = ['http://i43.tinypic.com/20ti15z.gif', 'http://i42.tinypic.com/2wogbb7.gif', 'http://i42.tinypic.com/293j8nc.gif', 'http://i44.tinypic.com/1zz749f.gif', 'http://i42.tinypic.com/x4j7fo.gif', 'http://i39.tinypic.com/apjrc2.gif']
    var randomImage = images[Math.floor(Math.random() * images.length)];
    if ($(this).attr("class") == "on") {
      this.src = randomImage;
    } else {
      this.src = "http://i41.tinypic.com/fm6mj8.gif";
    }
    $(this).toggleClass("on");

  var methods = $('#methods .method');

    if (methods.is(":visible")) {
      methods.hide();
    }
    else {
      var rand = Math.floor(Math.random() * methods.length);
      methods.eq(rand).show();
    }
  });
})
</script>